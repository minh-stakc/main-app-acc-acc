                    <button id="leftServoUpButton">Left Servo Up</button>
                    <button id="leftServoDownButton">Left Servo Down</button>
                    <br>
                    <button id="rightServoUpButton">Right Servo Up</button>
                    <button id="rightServoDownButton">Right Servo Down</button>
                    
                    <!-- Read Soil Control -->
                    <h2>Read Soil Control</h2>
                    <button id="readSoilButton">Read Soil</button>
                    <button id="useCylinderToReadSoilButton">Use Cylinder to Read Soil</button>


