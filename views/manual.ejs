                    <span id="pumpStatus">OFF</span>
                    <button id="togglePumpButton">Toggle Pump</button>
                    
                    <!-- Servos Control -->
                    <h2>Servos Control</h2>
                    <button id="bothServosUpButton">Both Servos Up</button>
                    <button id="bothServosDownButton">Both Servos Down</button>
