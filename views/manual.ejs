    <script>



        document.addEventListener('DOMContentLoaded', () => {

            // const socket =  new WebSocket("ws://localhost:81/ws");

            const toggleLedButton = document.getElementById('toggleLedButton');
            const ledStatus = document.getElementById('ledStatus');
            let ledOn = false;
            const togglePumpButton = document.getElementById('togglePumpButton');
            const pumpStatus = document.getElementById('pumpStatus');
            let pumpOn = false;
            const forwardButton = document.getElementById('forwardButton');
            const backwardButton = document.getElementById('backwardButton');
            const stopButton = document.getElementById('stopButton');
            const motorStatus = document.getElementById('motorStatus');
            let motorState = 'Stopped';
            const cylinderUpButton = document.getElementById('cylinderUpButton');
            const cylinderDownButton = document.getElementById('cylinderDownButton');
            const cylinderStopButton = document.getElementById('cylinderStopButton');
            const cylinderStatus = document.getElementById('cylinderStatus');
            let cylinderExtended = false;

            const socket = new WebSocket("ws://localhost:4000/ws");

            socket.addEventListener("open", () => {
                console.log("WebSocket connection opened");
            });

            socket.addEventListener("message", (event) => {
                console.log("Message received from server:", event.data);
            });

            toggleLedButton.addEventListener('click', () => {
                if (ledOn) {
                    // Turn off the LED
                    turnOffBothLEDs();
                } else {
                    // Turn on the LED
                    turnOnBothLEDs();
                }

                // Toggle the LED status
                ledOn = !ledOn;
                ledStatus.textContent = ledOn ? 'ON' : 'OFF';
            });
            togglePumpButton.addEventListener('click', () => {
                if (pumpOn) {
                    // Turn off the pump
                    turnOffPump();
                } else {
                    // Turn on the pump
                    turnOnPump();
                }

                // Toggle the pump status
                pumpOn = !pumpOn;
                pumpStatus.textContent = pumpOn ? 'ON' : 'OFF';
            });
            forwardButton.addEventListener('click', () => {
                // Drive base forward
                driveForward();
                // Update motor status
                motorStatus.textContent = 'Running Forward';
                motorState = 'Running Forward';
            });
            backwardButton.addEventListener('click', () => {
                // Drive base backward
                driveBackward();
                // Update motor status
                motorStatus.textContent = 'Running Backward';
                motorState = 'Running Backward';
            });
            stopButton.addEventListener('click', () => {
                // Stop the drive base
                stopDrive();
                // Update motor status
                motorStatus.textContent = 'Stopped';
                motorState = 'Stopped';
            });

            // cylinderUpButton.addEventListener('click', () => {
            //     if (cylinderExtended) {
            //         // Retract the cylinder
            //         retractCylinder();
            //     } else {
            //         // Extend the cylinder and wait for 20 seconds
            //         extendCylinder();
            //         setTimeout(() => {
            //             // After 20 seconds, retract the cylinder
            //             retractCylinder();
            //             cylinderStatus.textContent = 'Retracted';
            //             cylinderExtended = false;
            //         }, 20000); // 20 seconds in milliseconds
            //     }

            //     // Toggle the cylinder status
            //     cylinderExtended = !cylinderExtended;
            //     cylinderStatus.textContent = cylinderExtended ? 'Extended' : 'Retracted';
            // });

            cylinderUpButton.addEventListener('click', () => {
                // Drive base forward
                retractCylinder();
                // Update motor status
                cylinderStatus.textContent = 'retracting cylinder';
            });

            cylinderDownButton.addEventListener('click', () => {
                // Drive base forward
                extendCylinder();
                // Update motor status
                cylinderStatus.textContent = 'extending cylinder';
            });

            cylinderStopButton.addEventListener('click', () => {
                // Drive base forward
                stopCylinder();
                // Update motor status
                cylinderStatus.textContent = 'stopping cylinder';
            });

            //both_servos func
            function bothServosUp() {
                const data = {
                    type: "control/both_servos",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving forward');
            }

            function bothServosDown() {
                const data = {
                    type: "control/both_servos",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving backward');
            }

            //left_servo func
            function leftServoUp() {
                const data = {
                    type: "control/left_servo",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving forward');
            }

            function leftServoDown() {
                const data = {
                    type: "control/left_servo",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving backward');
            }

            //right_servo func
            function rightServoUp() {
                const data = {
                    type: "control/right_servo",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving forward');
            }

            function rightServoDown() {
                const data = {
                    type: "control/right_servo",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving backward');
            }

            //cylinder func
            function extendCylinder() {
                const data = {
                    type: "control/cylinder",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Cylinder is Extended');
            }

            function retractCylinder() {
                const data = {
                    type: "control/cylinder",
                    direction: -1,
                };
                socket.send(JSON.stringify(data));
                console.log('Cylinder is Retracted');
            }

            function stopCylinder() {
                const data = {
                    type: "control/cylinder",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Cylinder is Stopped');
            }

            //both_motors func
            function driveForward() {
                const data = {
                    type: "control/both_motors",
                    direction: 1,
                    speed1: 26,
                    speed2: 20,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving forward');
            }

            function driveBackward() {
                const data = {
                    type: "control/both_motors",
                    direction: -1,
                    speed1: 26,
                    speed2: 20,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving backward');
            }

            function stopDrive() {
                const data = {
                    type: "control/both_motors",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is stopped');
            }

            //left_motor func
            function leftMotorForward() {
                const data = {
                    type: "control/left_motor",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving forward');
            }

            function leftMotorBackward() {
                const data = {
                    type: "control/left_motor",
                    direction: -1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving backward');
            }

            function leftMotorStop() {
                const data = {
                    type: "control/left_motor",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is stopped');
            }

            //right_motor func
            function rightMotorForward() {
                const data = {
                    type: "control/right_motor",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving forward');
            }

            function rightMotorBackward() {
                const data = {
                    type: "control/right_motor",
                    direction: -1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving backward');
            }

            function rightMotorStop() {
                const data = {
                    type: "control/right_motor",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is stopped');
            }

            //pump func
            function turnOnPump() {
                const data = {
                    type: "control/pump",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Pump is ON');
            }

            function turnOffPump() {
                const data = {
                    type: "control/pump",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Pump is OFF');
            }

            //led1, led2 func
            function turnOnLED1() {
                const data = {
                    type: "control/led1",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is ON');
            }

            function turnOffLED1() {
                const data = {
                    type: "control/led1",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is OFF');
            }

            function turnOnLED2() {
                const data = {
                    type: "control/led2",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is ON');
            }

            function turnOffLED2() {
                const data = {
                    type: "control/led2",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is OFF');
            }

            //both_leds
            function turnOnBothLEDs() {
                const data = {
                    type: "control/both_leds",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is ON');
            }

            function turnOffBothLEDs() {
                const data = {
                    type: "control/both_leds",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is OFF');
            }

            //read_soil func
            function readSoil() {
                const data = {
                    type: "control/read_soil",
                }
                socket.send(JSON.stringify(data));
                console.log('Reading soil data for 30 secs');
            }

            function useCylinderToReadSoil() {
                const data = {
                    type: "control/cylinder_to_read_soil",
                }
                socket.send(JSON.stringify(data));
                console.log('Reading soil data for 5 mins');
            }

            document.getElementById('bothServosUpButton').addEventListener('click', bothServosUp);
            document.getElementById('bothServosDownButton').addEventListener('click', bothServosDown);
            document.getElementById('leftServoUpButton').addEventListener('click', leftServoUp);
            document.getElementById('leftServoDownButton').addEventListener('click', leftServoDown);
            document.getElementById('rightServoUpButton').addEventListener('click', rightServoUp);
            document.getElementById('rightServoDownButton').addEventListener('click', rightServoDown);

            document.getElementById('leftMotorForwardButton').addEventListener('click', leftMotorForward);
            document.getElementById('leftMotorBackwardButton').addEventListener('click', leftMotorBackward);
            document.getElementById('leftMotorStopButton').addEventListener('click', leftMotorStop);
            document.getElementById('rightMotorForwardButton').addEventListener('click', rightMotorForward);
            document.getElementById('rightMotorBackwardButton').addEventListener('click', rightMotorBackward);
            document.getElementById('rightMotorStopButton').addEventListener('click', rightMotorStop);

            document.getElementById('turnOnLED1Button').addEventListener('click', turnOnLED1);
            document.getElementById('turnOffLED1Button').addEventListener('click', turnOffLED1);
            document.getElementById('turnOnLED2Button').addEventListener('click', turnOnLED2);
            document.getElementById('turnOffLED2Button').addEventListener('click', turnOffLED2);

            document.getElementById('readSoilButton').addEventListener('click', readSoil);
            document.getElementById('useCylinderToReadSoilButton').addEventListener('click', useCylinderToReadSoil);
        });
    </script>
</body>

